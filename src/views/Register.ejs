<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Register | InfraConnect</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

  <style>
    /* Google Button Style */
    .google-btn {
      background-color: #fff;
      border: 1px solid #ccc;
      padding: 10px 14px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .google-btn:hover {
      background-color: #f3f4f6;
    }

    /* Modern Radio Button Style */
    .custom-radio {
      position: relative;
      display: inline-flex;
      align-items: center;
      cursor: pointer;
      gap: 8px;
    }

    .custom-radio input {
      appearance: none;
      width: 20px;
      height: 20px;
      border: 2px solid #f97316;
      border-radius: 50%;
      outline: none;
      background-color: #fff;
      transition: all 0.3s ease;
    }

    .custom-radio input:checked {
      background-color: #f97316;
      border: 6px solid white;
      box-shadow: 0 0 8px rgba(249, 115, 22, 0.8);
    }

    .custom-radio span {
      font-size: 16px;
      color: #4b5563;
    }

    /* Responsive Design for Tablet and Mobile */
    @media (max-width: 768px) {
      .container {
        max-width: 80%;
        padding: 2rem;
      }

      h2 {
        font-size: 2rem;
      }

      .google-btn {
        padding: 8px 12px;
      }
    }

    @media (max-width: 480px) {
      .container {
        max-width: 95%;
        padding: 1.5rem;
      }

      h2 {
        font-size: 1.75rem;
      }

      input,
      button {
        padding: 12px;
      }
    }
  </style>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <%- include('partials/Header', { title: title, user: user || {} }) %>

    <!-- Background Section -->
    <div class="bg-gradient-to-r from-orange-500 to-red-500 min-h-screen flex items-center justify-center py-12 px-4">
      <div class="container bg-white shadow-2xl rounded-2xl p-8 w-full max-w-md sm:max-w-sm relative">
        <!-- Heading Section -->
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-6">
          Create an Account on <span class="text-orange-500">InfraConnect</span>
        </h2>

        <!-- Register Form -->
        <form action="/api-user/register" method="POST">
          <!-- Role Selection with New Radio Buttons -->
          <div class="flex justify-center space-x-6 mb-6">
            <label class="custom-radio">
              <input type="radio" name="role" value="user" checked />
              <span>User</span>
            </label>
            <label class="custom-radio">
              <input type="radio" name="role" value="admin" />
              <span>Admin</span>
            </label>
          </div>

          <!-- Full Name Input -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Full Name</label>
            <input type="text" name="name"
              class="w-full p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
              placeholder="Enter your full name" required />
          </div>

          <!-- Email Input -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Email Address</label>
            <input type="email" name="email" 
              class="w-full p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
              placeholder="Enter your email" required />
          </div>

          <!-- Password Input -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Password</label>
            <input type="password" name="password"
              class="w-full p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
              placeholder="Create a strong password" required />
          </div>

          <!-- Confirm Password Input -->
          <div class="mb-4">
            <label class="block text-gray-700 font-medium mb-2">Confirm Password</label>
            <input type="password" name="confirmPassword"
              class="w-full p-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-orange-500"
              placeholder="Re-enter your password" required />
          </div>

          <!-- Submit Button -->
          <button type="submit"
            class="w-full bg-orange-500 text-white py-3 rounded-full hover:bg-orange-600 transition duration-300">
            Register
          </button>

          <!-- Continue with Google Button -->
          <button type="button" class="google-btn w-full mt-3 mb-4" onclick="continueWithGoogle()">
            <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google Logo" class="w-5 h-5" />
            Continue with Google
          </button>

          <!-- Already have an account Link -->
          <div class="text-center mt-4">
            Already have an account?
            <a href="/login" class="text-orange-500 hover:underline text-sm">Log in</a>
          </div>
        </form>
      </div>
    </div>

    <!-- JavaScript for Google Sign-In -->
    <script>
      function continueWithGoogle() {
        window.location.href = "/auth/google";
      }
    </script>

    <!-- Include Footer -->
    <%- include('partials/Footer') %>
</body>

</html>