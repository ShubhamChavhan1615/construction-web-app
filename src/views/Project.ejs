<!-- /views/projects.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Our Projects</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100">
    <!-- Header Section -->
    <%- include('partials/Header') %>

    <!-- Projects Section -->
    <div class="container mx-auto px-4 pb-5 pt-10">
      <h1
        class="bg-orange-500 rounded text-white py-4 mb-4 text-3xl text-center font-bold"
      >
        Projects
      </h1>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mt-5 gap-8">
        <% projects.forEach((project, index) => { %>
        <!-- Project Card with Hover Shadow Effect -->
        <div
          class="bg-white rounded-lg shadow-lg overflow-hidden transition duration-300 ease-in-out transform hover:shadow-2xl hover:scale-105"
        >
          <img
            src="<%= project.image %>"
            alt="<%= project.name %>"
            class="w-full h-52 object-cover"
          />
          <div class="p-6">
            <h3 class="text-2xl font-semibold text-gray-800">
              <%= project.name %>
            </h3>
            <p class="mt-2 text-gray-600"><%= project.description %></p>
            <button
              type="button"
              onclick="openModal('<%= index %>')"
              class="mt-4 inline-block text-orange-500 font-semibold hover:underline"
            >
              Read More →
            </button>
          </div>
        </div>

        <!-- Modal Popup -->
        <div
          id="modal-<%= index %>"
          class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center z-50"
        >
          <div
            class="bg-white rounded-lg p-6 w-11/12 md:w-2/3 lg:w-1/2 shadow-lg relative"
          >
            <button
              type="button"
              onclick="closeModal('<%= index %>')"
              class="absolute top-3 right-3 text-gray-700 text-2xl hover:text-red-500"
            >
              &times;
            </button>
            <h3 class="text-3xl font-bold text-orange-600 mb-4">
              <%= project.name %>
            </h3>
            <img
              src="<%= project.image %>"
              alt="<%= project.name %>"
              class="w-full h-60 object-cover mb-4 rounded"
            />
            <p class="text-lg text-gray-700 mb-4"><%= project.description %></p>
            <a
              href="<%= project.link %>"
              class="text-orange-500 font-semibold hover:underline"
              target="_blank"
            >
              View Full Project →
            </a>
          </div>
        </div>
        <% }); %>
      </div>
    </div>

    <!-- Footer Section -->
    <%- include('partials/Footer') %>

    <!-- Modal Script -->
    <script>
      // Open modal function
      function openModal(index) {
        document.getElementById("modal-" + index).classList.remove("hidden");
      }

      // Close modal function
      function closeModal(index) {
        document.getElementById("modal-" + index).classList.add("hidden");
      }
    </script>
  </body>
</html>
