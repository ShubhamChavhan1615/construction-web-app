<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

    <title>Admin Dashboard</title>
</head>
<body class="bg-gray-100 flex">

    <!-- Sidebar -->
    <div class="w-64 min-h-screen bg-orange-600 text-white p-5">
        <h2 class="text-2xl font-bold mb-4">Admin Panel</h2>
        <ul>
            <li class="py-2 px-4 hover:bg-white hover:text-black"><a href="/dashbord">Dashboard</a></li>
            <li class="py-2 px-4 hover:bg-white hover:text-black"><a href="#">Users</a></li>
            <li class="py-2 px-4 hover:bg-white hover:text-black"><a href="#">Settings</a></li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-6">
        <h1 class="text-3xl font-bold">Welcome to Admin Dashboard</h1>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-3 gap-4 mt-6">
            <div class="p-6 bg-white shadow rounded-lg">
                <h2 class="text-xl font-semibold">Total Users</h2>
                <p class="text-2xl font-bold">120</p>
            </div>
            <div class="p-6 bg-white shadow rounded-lg">
                <h2 class="text-xl font-semibold">Total Posts</h2>
                <p class="text-2xl font-bold">75</p>
            </div>
            <div class="p-6 bg-white shadow rounded-lg">
                <h2 class="text-xl font-semibold">Total Comments</h2>
                <p class="text-2xl font-bold">340</p>
            </div>
        </div>
    </div>

</body>
</html>
