<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>InfraConnect</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <style>
      /* Timeline Animation for Navbar */
      .nav-link {
        position: relative;
      }
      .nav-link::after {
        content: "";
        position: absolute;
        left: 50%;
        bottom: -4px;
        width: 0;
        height: 3px;
        background: linear-gradient(to right, #f97316, #ef4444);
        transition: width 0.3s ease, left 0.3s ease;
      }
      .nav-link:hover::after {
        width: 100%;
        left: 0;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <!-- Top Bar Section -->
    <div class="w-full bg-gray-900">
      <div
        class="container mx-auto flex justify-between items-center text-white text-sm py-2 px-4"
      >
        <div class="flex space-x-4">
          <p><i class="fas fa-phone-alt mr-2"></i> +91 7835478325</p>
          <p><i class="fas fa-envelope mr-2"></i> info@infraconnect.com</p>
        </div>
        <div class="hidden md:flex space-x-4">
          <a
            href="#"
            class="hover:text-orange-500 transition duration-300 text-sm"
            >News</a
          >
          <a
            href="#"
            class="hover:text-orange-500 transition duration-300 text-sm"
            >Careers</a
          >
          <a
            href="#"
            class="hover:text-orange-500 transition duration-300 text-sm"
            >Resources</a
          >
        </div>
      </div>
    </div>

    <!-- Navbar Section -->
    <nav class="bg-white shadow-lg sticky top-0 z-50">
      <div
        class="container mx-auto flex justify-between items-center py-4 px-6"
      >
        <!-- Logo -->
        <a href="/" class="text-3xl font-bold text-orange-600">InfraConnect</a>

        <!-- Desktop Navigation Links -->
        <ul class="hidden lg:flex space-x-8 text-lg font-medium text-gray-700">
          <li class="nav-link">
            <a href="/" class="hover:text-orange-500 transition duration-300"
              >Home</a
            >
          </li>
          <li class="nav-link">
            <a
              href="/About"
              class="hover:text-orange-500 transition duration-300"
              >About</a
            >
          </li>
          <li class="nav-link">
            <a href="#" class="hover:text-orange-500 transition duration-300"
              >Projects</a
            >
          </li>
          <li class="nav-link">
            <a href="#" class="hover:text-orange-500 transition duration-300"
              >Plans</a
            >
          </li>
          <li class="nav-link">
            <a href="#" class="hover:text-orange-500 transition duration-300"
              >Services</a
            >
          </li>
          <li class="nav-link">
            <a href="#" class="hover:text-orange-500 transition duration-300"
              >Contact</a
            >
          </li>
        </ul>

        <!-- Login Button Section with Gradient -->
        <div class="hidden lg:flex items-center">
          <a
            href="/login"
            class="bg-gradient-to-r from-orange-500 to-red-500 text-white font-semibold py-2 px-6 rounded-full shadow-md"
          >
            <i class="fas fa-user mr-2"></i> Login
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button
          class="lg:hidden text-3xl text-orange-600 focus:outline-none"
          id="menu-toggle"
        >
          â˜°
        </button>
      </div>

      <!-- Mobile/Tablet Menu Section -->
      <ul
        class="lg:hidden hidden flex-col space-y-3 p-4 bg-gray-100 text-lg font-medium transition-all duration-300"
        id="mobile-menu"
      >
        <li class="nav-link">
          <a
            href="/"
            class="block py-2 hover:text-orange-500 transition duration-300"
            >Home</a
          >
        </li>
        <li class="nav-link">
          <a
            href="/About"
            class="block py-2 hover:text-orange-500 transition duration-300"
            >About</a
          >
        </li>
        <li class="nav-link">
          <a
            href="#"
            class="block py-2 hover:text-orange-500 transition duration-300"
            >Projects</a
          >
        </li>
        <li class="nav-link">
          <a
            href="#"
            class="block py-2 hover:text-orange-500 transition duration-300"
            >Services</a
          >
        </li>
        <li class="nav-link">
          <a
            href="#"
            class="block py-2 hover:text-orange-500 transition duration-300"
            >Contact</a
          >
        </li>
        <!-- Mobile View Login Button with Gradient -->
        <li>
          <a
            href="/login"
            class="block py-2 bg-gradient-to-r from-orange-500 to-red-500 text-white text-center rounded-md"
          >
            <i class="fas fa-user mr-2"></i> Login
          </a>
        </li>
      </ul>
    </nav>

    <!-- JavaScript for Menu Toggle -->
    <script>
      const menuToggle = document.getElementById("menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");

      menuToggle.addEventListener("click", () => {
        mobileMenu.classList.toggle("hidden");
      });
    </script>
  </body>
</html>
