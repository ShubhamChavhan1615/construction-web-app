<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "Profile - InfraConnect" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    
    <%- include('Header', { title: title, user: user || {} }) %>
    <!-- Profile Section -->
    <div class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-semibold text-gray-700 text-center">User Profile</h2>
        
        <div class="flex flex-col items-center mt-6">
            <!-- Profile Image -->
            <img src="<%= user.profilePic ? user.profilePic : 'https://via.placeholder.com/150' %>" 
                 alt="Profile Picture" 
                 class="w-32 h-32 rounded-full shadow-lg border-4 border-orange-500" />

            <h3 class="mt-4 text-xl font-bold text-gray-800"><%= user.name || "Guest User" %></h3>
            <p class="text-gray-600"><%= user.email || "Not Provided" %></p>

            <!-- Edit Profile Button -->
            <a href="/edit-profile" 
               class="mt-4 bg-orange-500 text-white px-6 py-2 rounded-md hover:bg-orange-600 transition duration-300">
                <i class="fas fa-edit mr-2"></i> Edit Profile
            </a>

            <!-- Logout Button -->
            <a href="/logout" 
               class="mt-2 bg-red-500 text-white px-6 py-2 rounded-md hover:bg-red-600 transition duration-300">
                <i class="fas fa-sign-out-alt mr-2"></i> Logout
            </a>
        </div>
    </div>
    
    <%- include('Footer')%>

</body>
</html>
